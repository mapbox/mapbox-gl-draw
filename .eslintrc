{
  "extends": "mourner",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "globals": {
    "document": true
  },
  "rules": {
    "indent": [2,2],
    "array-bracket-spacing": "off",
    "block-scoped-var": "error",
    "consistent-return": "off",
    "global-require": "off",
    "key-spacing": "off",
    "no-eq-null": "off",
    "no-new": "off",
    "no-var": "error",
    "no-warning-comments": "error",
    "object-curly-spacing": "off",
    "prefer-arrow-callback": "error",
    "prefer-const": "error",
    "prefer-template": "error",
    "quotes": "off",
    "space-before-function-paren": "off",
    "template-curly-spacing": "error",
    "camelcase": 0
  },
  "env": {
    "es6": true,
    "browser": false
  }
}
